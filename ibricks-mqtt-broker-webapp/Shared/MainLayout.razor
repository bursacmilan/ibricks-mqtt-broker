@inherits LayoutComponentBase

<PageTitle>IBricks MQTT Broker</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Docked" Elevation="1" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">IBricks MQTT Broker</MudText>
        </MudDrawerHeader>
        <MudPaper Elevation="0" Style="padding: 0 10px 0 10px">
            <MudNavMenu Rounded="true" Color="Color.Primary" Margin="Margin.Dense">
                <MudNavLink Icon="@Icons.Material.Filled.Dashboard" Href="/">Discovered cellos</MudNavLink>
            </MudNavMenu>
        </MudPaper>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
           @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>